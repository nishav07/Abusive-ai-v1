}


        *{
            margin: 0px;
            padding: 0px;
            box-sizing: border-box;
        }

        a{
            color: black;
            text-decoration: none;
        }

        html{
            height: 100%;
        }

        body{
            font-family: 'Poppins', sans-serif;
            line-height: 1.2;
            background-color: var(--lightBackground);
            transition: all 0.3s ease;
            height: 100%;
            overflow-x: hidden;
        }


       html {
            font-size: 16px;
            scroll-behavior: smooth;
        }

        #navbar {
            width: 100%;
            background-color:var(--lightBackground);
            backdrop-filter: blur(10px);
            z-index: 1000;
            transition: all 0.3s ease;
            }


        .nav-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 1.25rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            height: 70px;
            background-color: var(--backShadow);
            border-radius: 1rem;
        }

        .nav-logo a {
            font-size: 1.5rem;
            font-weight: 700;
            outline: none;
            text-decoration: none;
            transition: color 0.3s ease;
            color: var(--font);
        }

        .nav-menu {
            display: flex;
            list-style: none;
            gap: 3rem;
            list-style:none;
            margin: 0;
            padding: 0;
            outline: none;
            text-decoration: none;
        }


        .nav-menu li a{
            color: var(--font);
            outline: none;
        }



        main{
            padding: 1.25rem;
            height: calc(100vh - 70px);
            color:var(--font);
        }

        .container{
            max-width:1200px;
            height: 100%;
            margin: 0 auto;
            padding:0 1.25rem;
            display: flex;
            flex-wrap: wrap;
            gap: 2rem;
        }

        .left-container{
            min-width:12.5rem;
            max-width: 25rem;
            background-color: var(--secBackground);
            flex: 1;
            height: 100%;
            border-radius: 1rem;
        }
        
        .right-container{
            display: flex;
            flex-direction:column;
            flex: 2;
            background-color: var(--secBackground);
            height: 100%;
            border-radius: 1rem;
        }

        .inner-container{
            padding: 1rem;
            height: 100%;
            /* background-color: rgb(202, 173, 229); */
            display: flex;
            align-items:flex-start;
            /* justify-content:space-between; */
            gap: 1rem;
            flex-direction: column;
        }

        .inner-nav{
            height: 3rem;
            width: 100%;
            display: flex;
            align-items:center;
            justify-content: space-between;
        }

        .inner-nav i{
            font-size:1.8rem;
            color: var(--font);
        }

        .inner-options{
            height:8rem;
            display: flex;
            /* align-items: center; */
            justify-content: center;
            flex-direction: column;
            gap: 1rem;
        }

        .chat-bar{
            flex: 1;
            overflow-y: scroll;
            width: 100%;
            display: flex;
            align-items: flex-start;
            flex-direction: column;
            gap: 1rem;
            padding-right: 0.5rem;
        }

        .chat-bar::-webkit-scrollbar{
            width: 0.5rem;
        }

        .chats{
            height: 3rem;
            width: 100%;
            padding: 1rem;
            background-color: var(--lightBackground);
            border-radius: 0.4rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .chats span{
            font-size: 1.3rem;
        }

        .chats i{
            font-size: 1.5rem;
        }


        .inner-container2{
            padding: 1rem 3rem;
            height: 100%;
            background-color: var(--secBackground);
            display: flex;
            align-items:flex-start;
            /* justify-content:space-between; */
            gap: 1rem;
            flex-direction: column;
            border-radius: 1rem;
        }

        .nav-of-chat{
            height: 3rem;
            width: 100%;
            display: flex;
            align-items: center;
            justify-content:space-between;
        }

        .option-of-chat{
            width: auto;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 1.5rem;
            list-style: none;
            text-decoration: none;
        }

        .option-of-chat a{
            color:var(--font);
        }

        .option-of-chat i{
            font-size: 1.5rem;
        }

        .chat-area{
            /* height: 100%; */
            border-radius: 1rem;
            flex: 2;
            background-color: var(--lightBackground);
            width: 100%;
            display: flex;
            /* align-items: center; */
            /* justify-content:flex-end; */
            flex-direction: column;
            gap: 1rem;
            overflow-y:scroll;
            padding: 1rem;
        }

        .chat-area::-webkit-scrollbar{
            width: 0.5rem;
        }

        .msg-user{
            display: flex;
            width: 60%;
            padding: 1rem;
            background-color:var(--user);
            border-radius: 1rem;
            align-self:flex-end;

            word-break: break-word;      
            overflow-wrap:anywhere;      
            white-space: pre-wrap;        

        }

        .msg-ai{
            display: flex;
            width: 60%;
            padding: 1rem;
            background-color:var(--aicol);
            border-radius: 1rem;
            align-self:flex-start;
        }

        .input-area{
            min-height:4rem;
            max-height:10rem;
            background-color: beige;
            padding: 1rem;
            width: 100%;
            border-radius: 2rem;
        }

        #input-field{
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        #input-field button{
            border: none;
            outline: none;
            font-size: 1.5rem;
        }


        #prompt{
            resize: none;
            height: auto;
            min-height: 2rem;
            max-height: 8rem;
            overflow-y: auto;
            width: 100%;
            padding: 0.5rem;
            outline: none;
            border: none;
            background-color: transparent;
        }

        @keyframes rotateFadeOut {
            0% { transform: rotate(0deg); opacity: 1; }
            100% { transform: rotate(90deg); opacity: 0; }
        }

        @keyframes rotateFadeIn {
            0% { transform: rotate(90deg); opacity: 0; }
            100% { transform: rotate(180deg); opacity: 1; }
        }

        .fade-out {
            animation: rotateFadeOut 0.2s ease forwards;
        }

        .fade-in {
            animation: rotateFadeIn 0.2s ease 0.2s forwards;
        }


        .loader {
        display: flex;
        gap: 5px;
        padding: 10px;
        justify-content: center;
        align-items: center;
        }

        .loader span {
        width: 8px;
        height: 8px;
        background-color:var(--loaderDot);
        border-radius: 50%;
        animation: bounce 0.6s infinite alternate;
        }

        .loader span:nth-child(2) { animation-delay: 0.2s; }
        .loader span:nth-child(3) { animation-delay: 0.4s; }

        @keyframes bounce {
        from { transform: translateY(0px); opacity: 0.3; }
        to { transform: translateY(-8px); opacity: 1; }
        }

        .hidden {
        display: none;
        }


