    <script>
        let form = document.getElementById("input-field").addEventListener("submit", async function(e){
        e.preventDefault();

        let userInput = document.querySelector("#prompt").value;
        console.log(userInput)
        userMsg(userInput);
        showLoader()
        const res = await fetch("/chat" , {
            method: "POST",
            headers: {
            "Content-Type": "application/json"
            },
            body: JSON.stringify({ msg: userInput })
        })

        const data = await res.json();
        let aiReply = await data.reply;
        hideLoader();
        aiMsg(aiReply);
        console.log(aiReply)
        });


        function userMsg(text) {
            let chatBox = document.querySelector(".chat-area");
            let loader = document.getElementById("loader");
            let div = document.createElement("div");
            div.setAttribute("class" , "msg-user")
            div.innerHTML = text;
            chatBox.append(div);
            document.querySelector("#prompt").value = "";
            chatBox.scrollTop = chatBox.scrollHeight;
        }

        function aiMsg(text) {
            let chatBox = document.querySelector(".chat-area");
            let div = document.createElement("div");
            div.setAttribute("class" , "msg-ai")
            div.innerHTML = text;
            chatBox.append(div);
            chatBox.scrollTop = chatBox.scrollHeight;
        }

            const toggleBtn = document.getElementById("theme-toggle");
            const root = document.documentElement;

            toggleBtn.addEventListener("click", () => {
            const currentTheme = root.getAttribute("data-theme");

            toggleBtn.classList.add("fade-out");

            setTimeout(() => {
            if (currentTheme === "dark") {
                root.setAttribute("data-theme", "light");
                toggleBtn.classList.replace("fa-sun", "fa-moon");
            } else {
                root.setAttribute("data-theme", "dark");
                toggleBtn.classList.replace("fa-moon", "fa-sun");
            }


            toggleBtn.classList.remove("fade-out");
            toggleBtn.classList.add("fade-in");
            }, 200);

            setTimeout(() => {
            toggleBtn.classList.remove("fade-in");
            }, 400);
            });


            function showLoader() {
            document.getElementById('typingLoader').classList.remove('hidden');
            }

            function hideLoader() {
            document.getElementById('typingLoader').classList.add('hidden');
            }

    </script>
