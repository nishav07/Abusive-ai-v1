        :root {
        --lightBackground: #f4f4f9;      /* super light grey-blue */
        --backShadow: #e6e6f0;           /* subtle shadow */
        --font: #1e1e2f;                 /* deep charcoal (almost black) */
        --secBackground: #dcdde1;        /* soft grey */
        --secBackshadow: #c7c9d3;        /* shadowed grey */
        --user: #a3d2ca;                 /* soft teal (user bubble) */
        --aicol: #ffeaa7;                /* pale yellow (AI bubble) */
        --loaderDot: #555;             /* loder for typing */
        }


        :root[data-theme="dark"] {
  --lightBackground: #002029;     /* dark navy grey */
  --backShadow: #00607a;          /* soft dark shadow */
  --font: #fffefc;                /* soft off-white text */
  --secBackground: #00303d;       /* secondary dark surface */
